{
    "extends": [
        "plugin:astro/recommended"
    ],
    "overrides": [
        {
            "files": ["*.astro"],
            "parser": "astro-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser",
                "extraFileExtensions": [".astro"]
            }
        }
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    }
}